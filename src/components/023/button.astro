---
const { next, previous, text } = Astro.props

let styles, page_increment

if (next) {
  styles = 'bg-#633BBC text-white hover:bg-#8257E5'
  page_increment = 1
} else if (previous) {
  styles = 'border border-#633BBC text-#633BBC '
  page_increment = -1
}
---

<button
  aria-label={text}
  @click.prevent={`page += ${page_increment}`}
  class="rounded-1.5 transition-background-color whitespace-nowrap px-4 py-2 font-bold uppercase outline-offset-2 sm:px-8 sm:py-4"
  class:list={styles}>
  {text}
</button>
